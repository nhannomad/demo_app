<h1>Listing mcroposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @mcroposts.each do |mcropost| %>
      <tr>
        <td><%= mcropost.content %></td>
        <td><%= mcropost.user_id %></td>
        <td><%= link_to 'Show', mcropost %></td>
        <td><%= link_to 'Edit', edit_mcropost_path(mcropost) %></td>
        <td><%= link_to 'Destroy', mcropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

